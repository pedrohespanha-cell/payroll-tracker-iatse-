    <script>
        // Initialize Lucide Icons
        lucide.createIcons();

        // UI Interactions
        function handleExport() {
            const toast = document.getElementById('toast');
            toast.classList.remove('hidden');
            setTimeout(() => toast.classList.add('hidden'), 3000);
        }

        function toggleCompareTray() {
            const tray = document.getElementById('compareTray');
            tray.classList.toggle('hidden');
            // Mock haptic response
            if (navigator.vibrate) navigator.vibrate(10);
        }

        // Simulating Smart Parsing (Heuristic visualization)
        document.querySelector('input').addEventListener('input', (e) => {
            const val = e.target.value.toLowerCase();
            // Basic heuristic highlights for the demo
            if (val.includes('costco') || val.includes('beef') || val.includes('$')) {
                e.target.classList.add('border-blue-500/50');
            } else {
                e.target.classList.remove('border-blue-500/50');
            }
        });
    </script>
